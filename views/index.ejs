<!DOCTYPE html>
<html>

<head>
    <title>COMP2068 | MEAN Stack Single Page App</title>

    <!--css -->
    <link type="text/css" rel="stylesheet" href="/stylesheets/bootstrap.min.css" />

    <link type="text/css" rel="stylesheet" href="/stylesheets/bootstrap-theme.min.css" />
</head>
<body>
<nav class="navbar navbar-default">
    <a class="navbar-brand" href="/">COMP2068 MEAN Stack SPA</a>
    <ul class="nav navbar-nav">
        <li><a href="/"></a></li>
    </ul>
</nav>

<main class="container" ng-app="GameApp" ng-controller="GameController" ng-init="getGames()">

    <h1>Game Manager</h1>

    <section class="form-group jumbotron">
        <h2>Game Details</h2>
        <form>
            <fieldset class="form-group">
                <label for="title" class="control-label col-sm-3">Title:</label>
                <input name="title" id="title" ng-model="currentGame.title" />
            </fieldset>
            <fieldset class="form-group">
                <label for="publisher" class="control-label col-sm-3">Publisher:</label>
                <input name="publisher" id="publisher" ng-model="currentGame.publisher" />
            </fieldset>
            <fieldset class="form-group">
                <label for="genre" class="control-label col-sm-3">Genre:</label>
                <input name="genre" id="genre" ng-model="currentGame.genre" />
            </fieldset>
            <fieldset class="form-group">
                <label for="year" class="control-label col-sm-3">Year:</label>
                <input name="year" id="year" ng-model="currentGame.year" type="number" />
            </fieldset>
            <button class="btn btn-success col-sm-offset-3" ng-click="addGame()" ng-hide="currentGame._id">Add</button>
            <button class="btn btn-success col-sm-offset-3" ng-click="updateGame()" ng-show="currentGame._id">Update</button>
            <button class="btn btn-success" ng-click="clearGame()">Clear</button>
            <input id="_id" name="_id" ng-model="currentGame._id" type="hidden" />
        </form>
    </section>

    <section>
        <h2>Game List</h2>
        <table class="table table-striped">
            <tr>
                <th>Title</th>
                <th>Publisher</th>
                <th>Genre</th>
                <th>Year</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
            <tr ng-repeat="g in games track by $index">
                <td>{{ g.title }}</td>
                <td>{{ g.publisher }}</td>
                <td>{{ g.genre }}</td>
                <td>{{ g.year }}</td>
                <td><button class="btn btn-primary" ng-click="selectGame(g._id)">Edit</button></td>
                <td><button class="btn btn-danger" ng-click="deleteGame(g._id, $index)">Delete</button></td>
            </tr>
        </table>
    </section>

</main>

<!--js-->
<script src="/javascripts/angular.min.js"></script>
<script src="/javascripts/angular-ui-router.js"></script>
<script src="/javascripts/jquery-3.1.1.min.js"></script>
<script src="/javascripts/bootstrap.min.js"></script>
<script src="/javascripts/scripts.js"></script>

<footer class="alert alert-info">
    &copy; 2016 | COMP2068 - Advanced Web Programming
</footer>

</body>
</html>

